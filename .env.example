# Multi-Agent SBDR System Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# REQUIRED CONFIGURATIONS
# ============================================================================

# OpenAI API Configuration (Required for AI responses)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# ============================================================================
# EXTERNAL INTEGRATIONS (Optional)
# ============================================================================

# Crisp Chat Integration
CRISP_IDENTIFIER=your_crisp_identifier
CRISP_KEY=your_crisp_api_key  
CRISP_WEBSITE_ID=your_crisp_website_id

# Shopify E-commerce Integration
SHOPIFY_SHOP_DOMAIN=your-shop-name
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token
SHOPIFY_API_VERSION=2023-10

# ============================================================================
# SYSTEM CONFIGURATION
# ============================================================================

# Environment Mode
ENVIRONMENT=development
# Options: development, staging, production

# Logging Configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Application Settings
APP_NAME=SBDR Multi-Agent System
APP_VERSION=1.0.0

# ============================================================================
# DATABASE CONFIGURATION (Optional)
# ============================================================================

# PostgreSQL Database (for conversation history and analytics)
DATABASE_URL=postgresql://sbdr_user:sbdr_pass@localhost:5432/sbdr_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Redis Cache (for session management and caching)
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# ============================================================================
# DOCKER CONFIGURATION
# ============================================================================

# Docker Compose Overrides
COMPOSE_PROJECT_NAME=sbdr-multiagent
COMPOSE_FILE=docker-compose.yml

# Port Mappings
WEB_PORT=8000
ADMIN_PORT=8080
POSTGRES_PORT=5432
REDIS_PORT=6379
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# API Security
API_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_METHODS=GET,POST,PUT,DELETE
ALLOWED_HEADERS=*

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================

# Async Settings
MAX_CONCURRENT_SESSIONS=100
SESSION_TIMEOUT=1800
REQUEST_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================================================
# MONITORING AND ANALYTICS
# ============================================================================

# Prometheus Metrics
ENABLE_METRICS=true
METRICS_PORT=8090

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# ============================================================================
# AGENT SYSTEM CONFIGURATION
# ============================================================================

# Agent Behavior Settings
DEFAULT_QUALIFICATION_THRESHOLD=0.7
MAX_QUALIFICATION_ATTEMPTS=5
HANDOFF_CONFIDENCE_THRESHOLD=0.8

# Response Generation Settings
AI_RESPONSE_MAX_TOKENS=200
AI_RESPONSE_TEMPERATURE=0.7
FALLBACK_RESPONSE_ENABLED=true

# ============================================================================
# BUSINESS LOGIC CONFIGURATION
# ============================================================================

# Qualification Criteria
MIN_BUDGET_THRESHOLD=100
VIP_CUSTOMER_THRESHOLD=10000
ENGAGEMENT_SCORE_MULTIPLIER=1.0

# Customer Tier Settings
PROSPECT_SESSION_DURATION=3600
CUSTOMER_SESSION_DURATION=7200
VIP_SESSION_DURATION=14400

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Debug Configuration
DEBUG=false
ENABLE_DEBUG_LOGGING=false
ENABLE_PROFILING=false

# Testing Configuration
ENABLE_TEST_MODE=false
MOCK_EXTERNAL_APIS=false
TEST_DATA_PATH=./test_data

# Development Tools
ENABLE_AUTO_RELOAD=false
ENABLE_CORS=true

# ============================================================================
# BACKUP AND RECOVERY
# ============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# ============================================================================
# NOTIFICATION SETTINGS
# ============================================================================

# Email Notifications (for system alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password
ADMIN_EMAIL=admin@yourcompany.com

# Webhook Notifications
WEBHOOK_URL=https://your-webhook-endpoint.com
WEBHOOK_SECRET=your_webhook_secret

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# System Features
ENABLE_AI_ENHANCEMENT=true
ENABLE_PRODUCT_RECOMMENDATIONS=true
ENABLE_CONVERSATION_ANALYTICS=true
ENABLE_REAL_TIME_HANDOFFS=true

# Integration Features
ENABLE_CRISP_INTEGRATION=true
ENABLE_SHOPIFY_INTEGRATION=true
ENABLE_THIRD_PARTY_INTEGRATIONS=false

# Advanced Features
ENABLE_MULTI_LANGUAGE=false
ENABLE_SENTIMENT_ANALYSIS=false
ENABLE_VOICE_INTEGRATION=false